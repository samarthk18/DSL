string=input("Enter STRING: ")

i=0
x=0
print("Character|Frequency")
for j in string:
  if (string.index(j)==i):
    print(j, " | ", string.count(j))
    if string.count(j)>x:
      x=string.count(j)
      m=j
  i=i+1

longest =(string.split())
l=0
for word in longest:
  if(len(word)>l):
    l=len(word)
print("Longest word is: ",word)

def isPalindrome(str):
 
    # Run loop from 0 to len/2
    for i in range(0, int(len(str)/2)):
        if str[i] != str[len(str)-i-1]:
            return False
    return True
 
ans = isPalindrome(string)
 
if (ans):
    print("Yes,it is a palindrome")
else:
    print("No,it is not a palindrome")

def check(s2, s1): 
    if (s2.count(s1)>0):     
        print("YES, the entered substring exists in the string") 
    else: 
        print("NO, the entered substring does not exist in the string") 
              
sub=input("Enter the substring to be searched: ")
check(string, sub) 
